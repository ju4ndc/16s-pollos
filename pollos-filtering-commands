qiime tools import \
--type 'SampleData[PairedEndSequencesWithQuality]' \
--input-path m02-manifest \
--output-path m02-demux.qza \
--input-format PairedEndFastqManifestPhred33

qiime demux summarize \
--i-data m02-demux.qza \
--o-visualization m02-demux.qzv

qiime dada2 denoise-paired \
--i-demultiplexed-seqs m02-demux.qza \
--p-trunc-len-f 287 \
--p-trunc-len-r 226 \
--p-trim-left-f 0 \
--p-trim-left-r 0 \
--p-n-threads 0 \
--o-table m02-table-dada2.qza \
--o-representative-sequences m02-rep-seqs-dada2.qza \
--o-denoising-stats m02-stats-dada2.qza

qiime feature-table summarize \
--i-table m02-table-dada2.qza \
--o-visualization m02-table-dada2.qzv \
--m-sample-metadata-file m02-metadata

qiime feature-table tabulate-seqs \
--i-data m02-rep-seqs-dada2.qza \
--o-visualization m02-rep-seqs-dada2.qzv

--------ANALISIS DE CHEQUEO CON PARAMETROS "dada2"---------------------------------------
qiime alignment mafft \
--i-sequences /home/usuario/Desktop/q2/filtering/m02/m02-rep-seqs-dada2.qza \
--o-alignment /home/usuario/Desktop/q2/filtering/m02/m02-aligned-rep-seqs.qza

qiime alignment mask \
--i-alignment /home/usuario/Desktop/q2/filtering/m02/m02-aligned-rep-seqs.qza \
--o-masked-alignment /home/usuario/Desktop/q2/filtering/m02/m02-masked-alignment.qza

qiime phylogeny fasttree \
--i-alignment /home/usuario/Desktop/q2/filtering/m02/m02-masked-alignment.qza \
--o-tree /home/usuario/Desktop/q2/filtering/m02/m02-unrooted-tree.qza

qiime phylogeny midpoint-root \
--i-tree /home/usuario/Desktop/q2/filtering/m02/m02-unrooted-tree.qza \
--o-rooted-tree /home/usuario/Desktop/q2/filtering/m02/m02-rooted-tree.qza
----------------------------------------------------------------------------------------------------
qiime diversity core-metrics-phylogenetic \
--i-phylogeny /home/usuario/Desktop/q2/filtering/m02/m02-rooted-tree.qza \
--i-table m02-table-dada2.qza \
--p-sampling-depth 4200 \
--m-metadata-file m02-metadata \
--output-dir m02-core-metrics-test
----------------------------------------------------------------------------------------------------
qiime feature-classifier classify-sklearn \
--i-classifier /home/usuario/Desktop/q2/classifiers/classifier-gg-13-8-99-341-805-estaki.qza \
--i-reads /home/usuario/Desktop/q2/filtering/m02/m02-rep-seqs-dada2.qza \
--o-classification m02-taxonomy-dada2.qza

---RENAMING-------------------------------------------------------------

qiime feature-table group \
--i-table m02-table-dada2-287-226.qza \
--verbose \
--p-axis sample \
--m-metadata-file m02-rename-metadata \
--m-metadata-column new-ID \
--p-mode sum \
--o-grouped-table m02-table-dada2-renamed.qza

qiime feature-table summarize \
--i-table m02-table-dada2-renamed.qza \
--o-visualization m02-table-dada2-renamed.qzv
